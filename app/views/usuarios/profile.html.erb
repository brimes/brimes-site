<%= javascript_include_tag "profile", "data-turbolinks-track" => true %>

<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to "Inicio", "/home" %></li>
      <li><a href="#">Perfil</a></li>
    </ol>
  </div>
</div>

<div id="profile-header" class="row">
  <div class="col-xs-10 col-sm-3">
    <span class="fancybox">
      <img src="http://www.gravatar.com/avatar/<%=  current_user.email_hash %>?s=200" class="img-rounded" alt="avatar" />
    </span>
  </div>
  <div class="col-xs-10 col-sm-6">
    <div id="" class="row listview">
      <div class="col-sm-3 listview-label">Email</div>
      <div class="col-sm-9 listview-info"><%=  current_user.email %>&nbsp;</div>

      <div class="col-sm-3 listview-label">Nome</div>
      <div class="col-sm-9 listview-info"><span class="editable" contentEditable="true"><%=  current_user.nome %></span>&nbsp;</div>

      <div class="col-sm-3 listview-label">Ultimo acesso</div>
      <div class="col-sm-9 listview-info"><%=  current_user.ultimo_acesso %>&nbsp;</div>

      <div class="col-sm-3 listview-label">Dispositivos</div>
      <div class="col-sm-9 listview-info">3&nbsp;</div>

    </div>
  </div>
</div>
