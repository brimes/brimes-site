<div class="container-fluid">
	<div id="page-login" class="row">
		<div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <%= form_for(:user, :url => "/usuarios/confirmacao_cadastro", :html => {:method => :post, :class => ""}) do |f| %>
              <div class="box">
                  <div class="box-content">
                      <div class="text-center">
                          <h3 class="page-header">Confirmação de acesso</h3>
                      </div>
                      <input type="hidden" class="form-control" name="email" value="<%= @dados["email"]  %>"/>
                      <input type="hidden" class="form-control" name="token" value="<%= @dados["token"]  %>"/>
                      <div class="form-group">
                          <label class="control-label">Informe a nova senha</label>
                          <input type="password" class="form-control" name="senha"  placeholder="Senha"/>
                      </div>
                      <div class="form-group">
                          <label class="control-label">Digite novamente a nova senha</label>
                          <input type="password" class="form-control" name="confirmacao_senha"  placeholder="Confirmação"/>
                      </div>
                      <div class="pull-right">
                          <%= f.submit "Acessar", class: "btn btn-primary" %>
                      </div>
                      <div class="clearfix"></div>
                  </div>
              </div>

            <%  end %>  
		</div>
	</div>
</div>
