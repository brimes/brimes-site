<div id="sidebar-left" class="col-xs-2 col-sm-2">
  <ul class="nav main-menu">
    <% ApplicationHelper.get_menu().each do  |item| %>
      <li>
        <% classes = "" %>
        <% if request.env['PATH_INFO'] == item[:path] %>
          <% classes = "active" %>
        <% end %>
        <%= link_to(item[:path], class: classes) do %>
            <i class="<%=  item[:icone] %>"></i>
            <span class="hidden-xs"><%=  item[:label] %></span>
          <% end %>
        </li>
      <%  end %>
    </ul>
  </div>
